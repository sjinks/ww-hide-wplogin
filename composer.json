{
	"name": "wildwolf/ww-hide-wplogin",
	"type": "wordpress-plugin",
	"description": "A WordPress plugin to hide wp-login.php and use a custom URL for logging in.",
	"keywords": ["wordpress", "plugin", "security", "login"],
	"license": "MIT",
	"homepage": "https://github.com/sjinks/ww-hide-wplogin",
	"authors": [
		{
			"name" : "Volodymyr Kolesnykov",
			"email" : "volodymyr@wildwolf.name",
			"homepage": "https://wildwolf.name/",
			"role" : "Developer"
		}
	],
	"autoload": {
		"psr-4": {
			"WildWolf\\HideWPLogin\\": "inc/"
		}
	},
	"require": {
		"php" : ">=7.0.0",
		"composer/installers" : "~2.0"
	},
	"require-dev": {
		"phpunit/phpunit": "^7"
	},
	"archive": {
		"exclude": ["/.*", "/tests", "/phpunit.xml", "/lang/Makefile"]
	},
	"scripts": {
		"test": "phpunit"
	}
}
